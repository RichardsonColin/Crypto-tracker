<h1>Update Crypto</h1>

<%= form_for([@portfolio, @crypto]) do |form| %>

  <% if @crypto.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@crypto.errors.count, "error") %> prohibited
        this crypto from being updated:
      </h2>
      <ul>
        <% @crypto.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :crypto %><br>
    <%= @crypto.crypto.titleize %>
    <% form.text_field :crypto %>
  </p>

  <p>
    <%= form.label :amount %><br>
    <%= form.text_field :amount %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back to Portfolio', portfolio_cryptos_path(@portfolio) %>