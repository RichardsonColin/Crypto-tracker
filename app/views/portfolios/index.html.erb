<h1>Portfolios</h1>
<%= link_to 'Create Protfolio', new_portfolio_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th colspan="2"></th>
  </tr>

  <% @portfolios.each do |portfolio| %>
    <tr>
      <td><%= portfolio.portfolio_name %></td>
      <td><%= portfolio.description %></td>
      <td><%= link_to 'Show', portfolio_path(portfolio) %></td>
      <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
      <td><%= link_to 'Remove', portfolio_path(portfolio),
              method: :delete,
              data: { confirm: 'Are you sure you want to remove this portfolio?
                      All cryptocurrency holdings will be lost.' } %></td>
    </tr>
  <% end %>
</table>